<%layout('./layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Saaman</h1>
        <div class="col-6 offset-3">

            <form action="/saamans" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="saaman[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="saaman[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input placeholder="0" type="text" class="form-control"  id="price" name="saaman[price]" aria-label="price" aria-describedby="price-label">
                      </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="saaman[description]"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="saaman[location]">
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add saaman</button>
                </div>
            </form>
            <a href="/saamans">View All Saamans</a>

        </div>
    </div>