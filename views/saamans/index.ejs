<%layout('./layouts/boilerplate')%>

    <body>
        <h1>All Saamans</h1>
        <div>
            <a href="/saamans/new">Add new Saaman</a>
        </div>
        <% for(let saaman of saamans){ %>
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src="<%=saaman.image%>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=saaman.title%>
                            </h5>
                            <p class="card-text">
                                <%=saaman.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=saaman.location%>
                                </small>
                            </p>
                            <a href="/saamans/<%=saaman._id%>">
                                <%=saaman.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <% }%>
    </body>